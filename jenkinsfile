pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                script {
                    echo 'building the application...'
                }
            }
        }
        
        stage('Test') {
            steps {      
                script {
                   echo 'Testing the application...'
                }   
            }
        }
        
        stage('deploy') {
            steps {
                script {
                   sshagent(['ec2-server']) {
                       sh 'ssh -o StrictHostKeyChecking=no ec2-user@54.91.73.189'                    
                   }
                }   
            }
        }
    }
}
